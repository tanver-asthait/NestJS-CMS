{
  "info": {
    "name": "BDJobs CMS API",
    "description": "Complete API documentation for BDJobs CMS system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/",
          "host": [
            "{{base_url}}"
          ],
          "path": []
        },
        "header": []
      }
    },
    {
      "name": "Register new user",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{base_url}}/auth/register",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "auth",
            "register"
          ]
        },
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"ADMIN\"\n}"
        }
      }
    },
    {
      "name": "Login user",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{base_url}}/auth/login",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "auth",
            "login"
          ]
        },
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
        }
      }
    },
    {
      "name": "Get all categories",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/categories",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "categories"
          ]
        },
        "header": []
      }
    },
    {
      "name": "Create new category",
      "request": {
        "method": "POST",
        "url": {
          "raw": "{{base_url}}/categories",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "categories"
          ]
        },
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Technology\",\n  \"description\": \"Technology related posts\",\n  \"slug\": \"technology\"\n}"
        },
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{access_token}}",
              "type": "string"
            }
          ]
        }
      }
    }
  ]
}